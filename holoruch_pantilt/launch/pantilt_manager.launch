<launch>
  <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
     <rosparam>
       namespace: dxl_manager
       serial_ports:
         pan_tilt_port:
           port_name: "/dev/ttyUSB0"
           baud_rate: 1000000
           min_motor_id: 1
           max_motor_id: 2
           update_rate: 20
     </rosparam>
  </node>

  <node ns="/pantilt_controller"
        name="pantilt_trajectory_feedback2joint_state" pkg="holoruch_dynamixel" type="trajectory_feedback2joint_state.py"
        output="screen" />
</launch>
